<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center">

    <com.library.widget.FlatStateButton
        android:id="@+id/flat_compound_button_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:padding="5dp" />

    <com.library.widget.FlatStateTitleTick
        android:id="@+id/flat_compound_button_tick_ico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:adjustViewBounds="true"
        android:paddingRight="15dp"
        android:paddingTop="-10dp"
        android:scaleType="fitStart" />

    <com.library.widget.FlatStateText
        android:id="@+id/flat_compound_button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</FrameLayout>